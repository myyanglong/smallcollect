<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    android:paddingBottom="5dp"
    android:paddingTop="5dp" 
    android:background="@drawable/small_collect_list_result">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:orientation="horizontal" >
        <RelativeLayout
            android:layout_width="0px"
            android:layout_height="20dp"
            android:layout_weight="3"
            android:gravity="left" >
            <TextView
		        android:id="@+id/data_address"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:gravity="left"
		        android:text="中智联 东楼B栋"
		        android:textColor="#484444" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0px"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:gravity="right|bottom" >
            <TextView
                android:id="@+id/data_status"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textSize="10sp"
		        android:text="工作正常"
		        android:textColor="#484444" />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <LinearLayout
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:orientation="horizontal" >
            <TextView
                android:id="@+id/data_id_text"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:gravity="left"
		        android:textSize="10sp"
		        android:text="ID:"
		        android:textColor="#484444" />
            <TextView
                android:id="@+id/data_id"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
				android:gravity="left|top"
		        android:textSize="10sp"
		        android:text="15010100001"
		        android:textColor="#484444" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:orientation="horizontal" >
            <TextView
                android:id="@+id/data_time_text"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textSize="10sp"
		        android:text="获取时间:"
		        android:textColor="#484444" />
            <TextView
                android:id="@+id/data_gtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15-12-01 10:20:04"
                android:textColor="#484444"
                android:textSize="10sp" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <LinearLayout
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:orientation="horizontal" >
            <TextView
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:gravity="left"
		        android:textSize="10sp"
		        android:text="总量:"
		        android:textColor="#484444" />
            <TextView
                android:id="@+id/data_total"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textSize="10sp"
		        android:text="258.00"
		        android:textColor="#484444" />
            <TextView
                android:id="@+id/data_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="m3"
                android:textColor="#484444"
                android:textSize="10sp" />
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:orientation="horizontal" >
            <TextView
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textSize="10sp"
		        android:text="采集时间:"
		        android:textColor="#484444" />
            <TextView
                android:id="@+id/data_time"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textSize="10sp"
		        android:text="17-12-01 12:23:34 360"
		        android:textColor="#484444" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>