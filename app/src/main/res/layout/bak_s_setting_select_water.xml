<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dip"
        android:background="#00B28C"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/s_btn_back"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_pressed_style"
            android:clickable="true" >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/s_back" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:layout_weight="3" >

            <LinearLayout
	            android:layout_width="fill_parent"
	            android:layout_height="match_parent"
	            android:background="@drawable/s_bg_normal"
	            android:gravity="center"
	            
	            android:orientation="horizontal" >
	
	           <Button
	                android:id="@+id/s_unit"
	                android:layout_width="fill_parent"
	                android:layout_height="fill_parent"
	                android:layout_gravity="center"
	                android:gravity="center"
	                android:layout_weight="1.0"
	                android:background="@drawable/s_bg_focused"
	                android:clickable="false"
	                android:text="灏忓尯閫夋嫨"
	                android:textColor="#ffffffff"
	                android:textSize="13.0sp" />
	
	            <Button
	                android:id="@+id/s_build"
	                android:layout_width="fill_parent"
	                android:layout_height="fill_parent"
	                android:layout_gravity="center"
	                android:layout_margin="0.0dip"
	                android:layout_weight="1.0"
	                android:background="@null"
	                android:clickable="true"
	                android:gravity="center"
	                android:padding="0.0dip"
	                android:text="妤兼爧閫夋嫨"
	                android:textColor="#ff90afff"
	                android:textSize="13.0sp" />
	            <Button
	                android:id="@+id/s_floor"
	                android:layout_width="fill_parent"
	                android:layout_height="fill_parent"
	                android:layout_gravity="center"
	                android:layout_margin="0.0dip"
	                android:layout_weight="1.0"
	                android:background="@null"
	                android:clickable="true"
	                android:gravity="center"
	                android:padding="0.0dip"
	                android:text="妤兼爧閫夋嫨"
	                android:textColor="#ff90afff"
	                android:textSize="13.0sp" />
	        </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/s_ok"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_pressed_style"
            android:clickable="true" >

           
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/s_more" />

        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>
