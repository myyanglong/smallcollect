<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:padding="5dp">
    <LinearLayout 
		android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical" 
	    >
	    <LinearLayout
		    android:id="@+id/s_layout_add"
		    android:layout_width="match_parent"
		    android:layout_height="40dip"
		    android:orientation="horizontal" 
		    android:layout_marginTop="2dp"
        	android:background="@drawable/s_pop_selector">
	        <TextView
	            android:layout_width="fill_parent"
	            android:layout_height="match_parent"
	            android:gravity="center"
	            android:text="添加抄表区域"
	            android:textColor="#ffffff"
	            android:textSize="15dp" />
        </LinearLayout>
        <LinearLayout
		    android:id="@+id/s_layout_addwater"
		    android:layout_width="match_parent"
		    android:layout_height="40dip"
		    android:orientation="horizontal" 
		    android:layout_marginTop="2dp"
        	android:background="@drawable/s_pop_selector">
	        <TextView
	            android:layout_width="fill_parent"
	            android:layout_height="match_parent"
	            android:gravity="center"
	            android:text="添加临时小表"
	            android:textColor="#ffffff"
	            android:textSize="15dp" />
        </LinearLayout> 
        <LinearLayout
		    android:id="@+id/s_layout_addbigwater"
		    android:layout_width="match_parent"
		    android:layout_height="40dip"
		    android:orientation="horizontal" 
		    android:layout_marginTop="2dp"
        	android:background="@drawable/s_pop_selector">
	        <TextView
	            android:layout_width="fill_parent"
	            android:layout_height="match_parent"
	            android:gravity="center"
	            android:text="添加临时大表"
	            android:textColor="#ffffff"
	            android:textSize="15dp" />
        </LinearLayout>        
        <LinearLayout
            android:id="@+id/s_layout_exp_data"
	        android:layout_width="match_parent"
	        android:layout_height="40dip"
	        android:orientation="horizontal" 
	        android:layout_marginTop="2dp"
	        android:background="@drawable/s_pop_selector">
	        <TextView
	            android:layout_width="fill_parent"
	            android:layout_height="match_parent"
	            android:gravity="center"
	            android:text="配置数据导出"
	            android:textColor="#ffffff"
	            android:textSize="15dp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/s_layout_exp_meter"
	        android:layout_width="match_parent"
	        android:layout_height="40dip"
	        android:orientation="horizontal" 
	        android:layout_marginTop="2dp"
	        android:background="@drawable/s_pop_selector">
	        <TextView
	            android:layout_width="fill_parent"
	            android:layout_height="match_parent"
	            android:gravity="center"
	            android:text="小表数据导出"
	            android:textColor="#ffffff"
	            android:textSize="15dp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/s_layout_init"
	        android:layout_width="match_parent"
	        android:layout_height="40dip"
	        android:orientation="horizontal" 
	        android:layout_marginTop="2dp"
	        android:background="@drawable/s_pop_selector">
	        <TextView
	            android:layout_width="fill_parent"
	            android:layout_height="match_parent"
	            android:gravity="center"
	            android:text="数据初始化"
	            android:textColor="#ffffff"
	            android:textSize="15dp" />
        </LinearLayout>
	</LinearLayout>
</LinearLayout>