<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:padding="5dp">
    <LinearLayout 
		android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical" 
	    >
	    <LinearLayout
		    android:id="@+id/s_meter"
		    android:layout_width="match_parent"
		    android:layout_height="40dip"
		    android:orientation="horizontal" 
		    android:layout_marginTop="2dp"
        	android:background="@drawable/s_pop_selector">
	        <TextView
	            android:layout_width="fill_parent"
	            android:layout_height="match_parent"
	            android:gravity="center"
	            android:text="添加设备"
	            android:textColor="#ffffff"
	            android:textSize="15dp" />
        </LinearLayout>
	    <LinearLayout
		    android:id="@+id/s_config"
		    android:layout_width="match_parent"
		    android:layout_height="40dip"
		    android:orientation="horizontal" 
		    android:layout_marginTop="2dp"
        	android:background="@drawable/s_pop_selector">
	        <TextView
	            android:layout_width="fill_parent"
	            android:layout_height="match_parent"
	            android:gravity="center"
	            android:text="配置"
	            android:textColor="#ffffff"
	            android:textSize="15dp" />
        </LinearLayout>
        <LinearLayout
		    android:id="@+id/s_read"
		    android:layout_width="match_parent"
		    android:layout_height="40dip"
		    android:orientation="horizontal" 
		    android:layout_marginTop="2dp"
        	android:background="@drawable/s_pop_selector">
	        <TextView
	            android:layout_width="fill_parent"
	            android:layout_height="match_parent"
	            android:gravity="center"
	            android:text="读取配置数据"
	            android:textColor="#ffffff"
	            android:textSize="15dp" />
        </LinearLayout>
        <LinearLayout
		    android:id="@+id/s_debug"
		    android:layout_width="match_parent"
		    android:layout_height="40dip"
		    android:orientation="horizontal" 
		    android:layout_marginTop="2dp"
        	android:background="@drawable/s_pop_selector">
	        <TextView
	            android:layout_width="fill_parent"
	            android:layout_height="match_parent"
	            android:gravity="center"
	            android:text="重新组网"
	            android:textColor="#ffffff"
	            android:textSize="15dp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/s_exit"
	        android:layout_width="match_parent"
	        android:layout_height="40dip"
	        android:orientation="horizontal" 
	        android:layout_marginTop="2dp"
	        android:background="@drawable/s_pop_selector">
	        <TextView
	            android:layout_width="fill_parent"
	            android:layout_height="match_parent"
	            android:gravity="center"
	            android:text="组网"
	            android:textColor="#ffffff"
	            android:textSize="15dp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/s_concentrator"
	        android:layout_width="match_parent"
	        android:layout_height="40dip"
	        android:orientation="horizontal" 
	        android:layout_marginTop="2dp"
	        android:background="@drawable/s_pop_selector">
	        <TextView
	            android:layout_width="fill_parent"
	            android:layout_height="match_parent"
	            android:gravity="center"
	            android:text="集中器采集"
	            android:textColor="#ffffff"
	            android:textSize="15dp" />
        </LinearLayout>
        
        <LinearLayout
            android:id="@+id/s_connet"
	        android:layout_width="match_parent"
	        android:layout_height="40dip"
	        android:orientation="horizontal" 
	        android:layout_marginTop="2dp"
	        android:background="@drawable/s_pop_selector">
	        <TextView
	            android:layout_width="fill_parent"
	            android:layout_height="match_parent"
	            android:gravity="center"
	            android:text="采集器连接测试"
	            android:textColor="#ffffff"
	            android:textSize="15dp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/s_gprs"
	        android:layout_width="match_parent"
	        android:layout_height="40dip"
	        android:orientation="horizontal" 
	        android:layout_marginTop="2dp"
	        android:background="@drawable/s_pop_selector">
	        <TextView
	            android:layout_width="fill_parent"
	            android:layout_height="match_parent"
	            android:gravity="center"
	            android:text="3G/GPRS通讯测试"
	            android:textColor="#ffffff"
	            android:textSize="15dp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/s_ver"
	        android:layout_width="match_parent"
	        android:layout_height="40dip"
	        android:orientation="horizontal" 
	        android:layout_marginTop="2dp"
	        android:background="@drawable/s_pop_selector">
	        <TextView
	            android:layout_width="fill_parent"
	            android:layout_height="match_parent"
	            android:gravity="center"
	            android:text="版本信息"
	            android:textColor="#ffffff"
	            android:textSize="15dp" />
        </LinearLayout>
         <LinearLayout
            android:id="@+id/s_update"
	        android:layout_width="match_parent"
	        android:layout_height="40dip"
	        android:orientation="horizontal" 
	        android:layout_marginTop="2dp"
	        android:background="@drawable/s_pop_selector">
	        <TextView
	            android:layout_width="fill_parent"
	            android:layout_height="match_parent"
	            android:gravity="center"
	            android:text="程序升级"
	            android:textColor="#ffffff"
	            android:textSize="15dp" />
        </LinearLayout>
	</LinearLayout>
</LinearLayout>